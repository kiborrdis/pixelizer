{
  "compilerOptions": {
    "module": "esnext",
    "lib": [
      "es6",
      "dom"
    ],
    "declarationDir": "./dist",
    "noImplicitAny": true,
    "target": "es5",
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "declaration": true,
    "esModuleInterop": true
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "src/**/*.test.ts"
  ]
}
